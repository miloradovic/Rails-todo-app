<table class="table table-bordered">
  <tbody>
    <% @lists.each do |list| %>
      
      <% if list.completed %>
        <tr class="table-secondary">
          <td class="w-50" id="striker">
            <%= link_to list.description, edit_list_path(list) %>
          </td>
          <td class="w-25">
            <center>
            <%= form_for(list) do |f| %>
            <%= f.text_field :description, type: 'hidden' %>
            <%= f.check_box :completed, :checked => false, :style => 'visibility: hidden' %>
            <%= f.submit "Uncheck", class: 'btn btn-outline-secondary btn-sm' %>
            <% end %>
            </center>
          </td>
          <td class="w-25">
            <center>
              <%= link_to 'Delete', list, class: 'btn btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
            </center>
          </td>
        </tr>
      <% else %>
        <tr>
          <td class="w-50">
            <%= link_to list.description, edit_list_path(list) %>
          </td>
          <td class="w-25">
            <center>
              <%= form_for(list) do |f| %>
              <%= f.text_field :description, type: 'hidden' %>
              <%= f.check_box :completed, :checked => true, :style => 'visibility: hidden' %>
              <%= f.submit "Check", class: 'btn btn-outline-secondary btn-sm' %>
              <% end %>
            </center>
          </td>
          <td class="w-25">
            <center>
              <%= link_to 'Delete', list, class: 'btn btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
            </center>
          </td>
        </tr>
      <% end %>
      
    <% end %>
  </tbody>
</table>

